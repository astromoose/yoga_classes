- colwidth = 95/@classes.count
%p= "There are " + @classes.count.to_s + " Yoga classes available."

%style{ :type => 'text/css' }
  :sass
    column
      :width #{colwidth}%
      :display inline
      :float left
      :border-right-color #ddd
      :border-right-style dashed 
      :border-right-width thin

- @classes.each do |yoga_class, student|
  %column
    #classes
      #classes.classtitle= yoga_class 
      - student.each do |s|
        #classes.student
          %p= s.capitalize
          #classes.controls
            %ul
              %li.inline
                %form(action='/' method='post')
                  %input(type='hidden' name='student' value=s)
                  %input(type='hidden' name='yoga_class' value=yoga_class)
                  %input(type='submit' class='button green' value='unsubscribe')
              %li.inline
                %form(action='/promote' method='post')
                  %input(type='hidden' name='student' value=s)
                  %input(type='hidden' name='yoga_class' value=yoga_class)
                  %input(type='submit' class='button green' value='promote')
